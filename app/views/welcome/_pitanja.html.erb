<% if current_user.all_answered == false  %>
<div class="row pitanja ">
  <div class="martabutton">
    <% if current_user.tacno(1) == nil  %>
      <div class="col-md-6" id="marta_but">
	<% if current_user.koliko_danas(1) < 3 %> 
	   <button id="marta" class="btn btn-lg btn-primary mbtn ">Martina zagonetka <span class="glyphicon glyphicon-question-sign"></span></button>
	<% else %>    
	   <button id="marta_dis" class="btn btn-lg btn-disabled mbtn ">Pokušajte sutra</button>
	<% end %> 
      </div>
    <% else %> 
      <div class="col-md-6">
	<button id="marta_ans" class="btn btn-lg btn-disabled mbtn ">Bravo!!  <span class="glyphicon glyphicon-question-sign"></span></button>
      </div>
    <% end %>

    
    <% if current_user.tacno(2) == nil %>
       <div class="col-md-6" id="kjara_but">
	 <% if current_user.koliko_danas(2) < 3 %> 
          <button id="klara" class="btn btn-lg btn-primary mbtn ">Kjarina zagonetka <span class="glyphicon glyphicon-question-sign"></span></button>
	 <% else %>
           <button id="klara_dis" class="btn btn-lg btn-disabled mbtn ">Pokušajte sutra</button>
         <% end %>   
       </div> 
    <% else %>    
       <div class="col-md-6">
	<button id="marta_ans" class="btn btn-lg btn-disabled mbtn "> Rešeno  </button>
       </div>
    <% end %>

  </div>
</div>
<% else %>
  <h1> Tačno ste odgovorili na oba pitanja. Bravo! </h1>
<% end %>
